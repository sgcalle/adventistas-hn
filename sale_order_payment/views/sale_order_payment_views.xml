<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_payment_view_form" model="ir.ui.view">
        <field name="name">sale.order.payment.view.form</field>
        <field name="model">sale.order.payment</field>
        <field name="arch" type="xml">
            <form string="Sale Order Register">
                <header name="header" />
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="amount_paid" string="Amount" />
                            <field name="payment_date" />
                            <field name="memo" />
                        </group>
                    </group>
                    <group>
                        <field name="reconciled_payment_ids" widget="one2many" mode="tree" 
                            readonly="1" nolabel="1">
                            <tree>
                                <field name="sale_order_id" string="Sale Order Id"/>
                                <field name="amount_reconciled" />
                                <field name="date_reconciled" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>