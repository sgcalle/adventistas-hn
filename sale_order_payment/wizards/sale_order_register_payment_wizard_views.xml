<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_register_payment_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.register.payment.wizard.view.form</field>
        <field name="model">sale.order.register.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Order Register Payment Wizard">
                <group>
                    <group>
                        <field name="journal_id" />
                    </group>
                    <group>
                        <field name="amount_to_pay" />
                        <field name="payment_date" />
                        <field name="memo" />
                    </group>
                </group>
                <footer>
                    <button string="Register Payment" type="object" name="action_register_sale_order_payment" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>